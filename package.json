{
  "name": "tic-tac-toe-classic-standalone",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "homepage": "https://laurence77.github.io/tic-tac-toe/",
  "dependencies": {
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "typescript": "^5.4.0"
  },
  "scripts": {
    "dev": "esbuild src/main.ts --bundle --outfile=public/bundle.js --servedir=public --sourcemap --watch",
    "dev:enhanced": "esbuild src/main-enhanced.ts --bundle --outfile=public/bundle.js --servedir=public --sourcemap --watch",
    "build": "esbuild src/main.ts --bundle --outfile=public/bundle.js --minify --sourcemap",
    "build:enhanced": "esbuild src/main-enhanced-clean.ts --bundle --outfile=public/bundle.js --minify --sourcemap"
  }
}